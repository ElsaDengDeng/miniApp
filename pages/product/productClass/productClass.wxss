/* pages/product/productClass/productClass.wxss */
.content{
    font-size: 30rpx;
    position: relative;
    width: 100%;
    height: 100%;
}
.goods-class-left{
    /*display: inline-block;*/
    width: 25%;
    height: 100%;
    background: #f2f2f2;
    text-align: center;
    overflow: scroll;
}

.goods-class-left .goods-class-items{
    height: 104rpx;
    line-height: 104rpx;
    color: #323232;
    background: #ededed;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    padding: 0 10rpx;
    border-bottom: 1px solid #dedede;
}
.goods-class-left .active{
    background: #fff;
    color: #f13a20;
}
.goods-class-right{
    position: absolute;
    top: 0;
    right: 0;
    flex: 1;
    width: 75%;
    height: 100%;
    box-sizing: border-box;
}
.goods-class-tab{
    padding: 0rpx 4rpx 0 52rpx;
}
.goods-class-tab span{
    display: block;
    color: #858585;
}
.goods-class-tab ul {
    display: block;
    padding-top: 34rpx;
    overflow: hidden;
}
.goods-class-tab ul li{
    float: left;
    color: #323232;
    padding: 8rpx 46rpx 12rpx 16rpx;
    background: #f2f2f2;
    border-radius: 4px;
    margin-right: 46rpx;
    margin-bottom: 14rpx;
}
.goods-class-no-more{
    display: block;
    width: 100%;
    position: absolute;
    top: 30%;
    color: #787878;
    text-align: center;
}